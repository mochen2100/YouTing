<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:id="@+id/ll_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notification_singer_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
       />
    
     <LinearLayout 
         android:layout_height="64dp"
         android:layout_width="100dp"
         android:orientation="vertical"
         android:layout_marginLeft="5dp"
         >
        
       <TextView 
               android:id="@+id/notification_song_name"            
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:textColor="#ffffff"
             
               />
        <TextView 
               android:id="@+id/notification_singer_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="3dp"
               android:textSize="15sp"
               android:textColor="#ffffff"                      
               />         
     </LinearLayout>   
      
        <ImageView
            android:id="@+id/play_pause_music"
            android:layout_width="30dp"
            android:layout_height="30dp"      
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:src="@drawable/notification_stop" />

           <ImageView
            android:id="@+id/next_music"
            android:layout_width="30dp"
            android:layout_height="30dp"   
            android:layout_marginLeft="25dp"      
            android:layout_gravity="center_vertical"
            android:src="@drawable/notification_next" />
           
           <Button
            android:id="@+id/close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:background="@drawable/notification_exit" />      

</LinearLayout>